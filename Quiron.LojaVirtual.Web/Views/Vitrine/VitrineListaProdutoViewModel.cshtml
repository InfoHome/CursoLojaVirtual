@using Quiron.LojaVirtual.HtmlHelpers
@model Quiron.LojaVirtual.Web.ViewModels.VitrineViewModel

@{
    ViewBag.Title = "VitrineListaProdutoViewModel";
}


@foreach (var p in Model.Produtos)
{
    <div class="well">
        <h3>
            <strong>@p.Nome</strong>
        </h3>
        <h3>
            <span class="pull-right label label-primary">
                @p.Preco.ToString("c")
            </span>
        </h3>
        <h3>
            <span class="lead">
                @p.Descricao 
            </span>
        </h3>
        
    </div>
}
<div class="btn-group pull-right">
    @Html.LinksDaPagina(Model.Paginacao, x => Url.Action("VitrineListaProdutoViewModel", new { pagina = x }))
</div>

